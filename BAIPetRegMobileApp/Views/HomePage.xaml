<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BAIPetRegMobileApp.HomePage"
             Shell.FlyoutBehavior="Flyout"
             FlyoutItem.IsVisible="False"
             Shell.BackgroundColor="#57C84D"
             Shell.NavBarIsVisible="True">
 
    
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>

    <Shell.TitleView>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                x:Name="MenuBtnClicked"
                FontFamily="MaterialIconsOutlined-Regular"
                Text="menu"
                BackgroundColor="Transparent"
                FontSize="30"
                Clicked="MenuBtnClicked_Clicked"
                HorizontalOptions="Start" />

            <Button Grid.Column="2"
                x:Name="HomepageBtn"
                Clicked="HomepageBtn_Clicked"
                Text="pets"
                BackgroundColor="Transparent"
                FontFamily="MaterialIconsOutlined-Regular"
                FontSize="30"
                Margin="0,0,20,0"
                HorizontalOptions="EndAndExpand" />



            <!-- Empty element to fill the right column -->
           
            
        </Grid>
    </Shell.TitleView>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Define rows for your banner, search frame, and content -->
            <RowDefinition Height="Auto" />
            <!-- Banner -->
            <RowDefinition Height="Auto" />
            <!-- Search Frame -->
            <RowDefinition Height="*" />
            <!-- Content -->
        </Grid.RowDefinitions>

        <Image
        Source="bai_banner.jpg"
        VerticalOptions="Center"
        HorizontalOptions="Center"/>

        <Frame Grid.Row="1"
            BackgroundColor="White"
            CornerRadius="20"
            Padding="0"
            HeightRequest="50"
            Margin="23,30,23,20"
            x:Name="SearchFrame"
        >
            <SearchBar
            Placeholder="Search"
            BackgroundColor="Transparent"
            VerticalOptions="Center"
            Margin="10,0"/>
                </Frame>
        <ScrollView Grid.Row="2">
            <VerticalStackLayout Spacing="2">

                <Label
     Text="Welcome!"
     TextColor="#096B00"
     FontAttributes="Bold"
     FontSize="33"
     Margin="0,20,0,0"
     Style="{StaticResource Headline}"
     SemanticProperties.HeadingLevel="Level1"/>

                <Image
     Source="bai_logo.png"
     Opacity="0.5"
     WidthRequest="300"
     HeightRequest="300"
     Margin="0,30,0,0"
     Aspect="AspectFit"
     VerticalOptions="Center"
     HorizontalOptions="Center"/>


                <Button x:Name="BtnRegisterPet"
         FontSize="20"
         Text="Register a Pet"
         FontAttributes="Bold"
         Padding="20"
         Margin="10"
         BackgroundColor="#096B00"
         Clicked="BtnRegisterPet_Clicked"
         CornerRadius="10"
         />

                <!--Pet Gallery - 1-->
                <StackLayout Padding="10">
                    <Frame BackgroundColor="#98FB98" 
                   CornerRadius="30" 
                   Padding="15">
                        <StackLayout>
                            <!-- Image -->
                            <Image Source="profile_pic_1.png" 
                           HeightRequest="250" 
                           HorizontalOptions="Center" 
                           Margin="0,0,0,40"/>

                            <!-- Labels -->
                            <Label Text="REG ID: 01022023 JUDELA CRUZBLACKIENO" FontAttributes="Bold"/>
                            <Label Text="Date Registered: 22/03/2024" />
                            <Label Text="Date Of Birth: 02/01/2023" />
                            <Label Text="Alias: Jaguar" />

                            <!-- Button -->

                            <Button 
                            x:Name="PetinfoBtn"
                            Clicked="PetinfoBtn_Clicked"
                            Text="Show Full Information" 
                            BackgroundColor="#008000" 
                            TextColor="White"
                            Margin="0,40,0,0"
                            Padding="20"
                            CornerRadius="20" />
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <!--Pet Gallery - 2-->
                <StackLayout Padding="10">
                    <Frame BackgroundColor="#98FB98" 
                   CornerRadius="30" 
                   Padding="15">
                        <StackLayout>
                            <!-- Image -->
                            <Image Source="dog_img.png" 
                           HeightRequest="250" 
                           HorizontalOptions="Center" 
                           Margin="0,0,0,40"/>

                            <!-- Labels -->
                            <Label Text="REG ID: 01022023 JUDELA CRUZBLACKIENO" FontAttributes="Bold"/>
                            <Label Text="Date Registered: 22/03/2024" />
                            <Label Text="Date Of Birth: 02/01/2023" />
                            <Label Text="Alias: Jaguar" />

                            <!-- Button -->
                            <Button Text="Show Full Information" 
                            BackgroundColor="#008000" 
                            TextColor="White"
                            Margin="0,40,0,0"
                            Padding="20"
                            CornerRadius="20" />
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <!--Pet Gallery - 3-->
                <StackLayout Padding="10">
                    <Frame BackgroundColor="#98FB98" 
                   CornerRadius="30" 
                   Padding="15">
                        <StackLayout>
                            <!-- Image -->
                            <Image Source="dog_img.png" 
                           HeightRequest="250" 
                           HorizontalOptions="Center" 
                           Margin="0,0,0,40"/>

                            <!-- Labels -->
                            <Label Text="REG ID: 01022023 JUDELA CRUZBLACKIENO" FontAttributes="Bold"/>
                            <Label Text="Date Registered: 22/03/2024" />
                            <Label Text="Date Of Birth: 02/01/2023" />
                            <Label Text="Alias: Jaguar" />

                            <!-- Button -->
                            <Button Text="Show Full Information" 
                            BackgroundColor="#008000" 
                            TextColor="White"
                            Margin="0,40,0,0"
                            Padding="20"
                            CornerRadius="20" />
                        </StackLayout>
                    </Frame>
                </StackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
   

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#7EE175" Offset="0.0" />
            <GradientStop Color="#ffffff" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    
</ContentPage>
