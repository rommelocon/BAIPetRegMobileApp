<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BAIPetRegMobileApp.Views.PetRegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <Grid>
        <Grid.RowDefinitions>
            <!--  Define rows for your banner, search frame, and content  -->
            <RowDefinition Height="Auto" />
            <!--  Banner  -->
            <RowDefinition Height="Auto" />
            <!--  Search Frame  -->
            <RowDefinition Height="*" />
            <!--  Content  -->
        </Grid.RowDefinitions>
        <Image
            Grid.Row="1"
            HorizontalOptions="Center"
            Source="bai_banner.jpg"
            VerticalOptions="Center" />

        <ScrollView Grid.Row="2">
            <VerticalStackLayout>
                <Label
                    Margin="0,30,0,0"
                    FontAttributes="Bold"
                    FontFamily="Poppins-Bold"
                    FontSize="30"
                    HorizontalOptions="Center"
                    Text="Pet Registration"
                    TextColor="#096B00" />
                <Label
                    Margin="40,50,0,0"
                    FontAttributes="Bold"
                    FontFamily="Poppins-Bold"
                    FontSize="20"
                    HorizontalOptions="Start"
                    Text="Animal Information"
                    TextColor="#096B00" />

                <!--  Pet's Name Entry  -->

                <StackLayout>
                    <Label
                        Margin="40,20,0,0"
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Pet's Name *"
                        TextColor="Black" />
                    <Frame
                        Margin="30,10"
                        Padding="10"
                        BackgroundColor="#DCF4DA"
                        BorderColor="Transparent"
                        CornerRadius="15"
                        HasShadow="False"
                        HorizontalOptions="FillAndExpand">
                        <Entry
                            x:Name="EntryPetName"
                            BackgroundColor="Transparent"
                            FontAttributes="None"
                            FontSize="20"
                            HorizontalOptions="FillAndExpand"
                            IsSpellCheckEnabled="False"
                            IsTextPredictionEnabled="False"
                            Placeholder="Pet's Name"
                            PlaceholderColor="Black"
                            VerticalOptions="Center">
                            <Entry.Behaviors>
                                <toolkit:TextValidationBehavior
                                    x:Name="petNameValidator"
                                    Flags="ValidateOnAttaching,ValidateOnValueChanged"
                                    MinimumLength="1" />
                            </Entry.Behaviors>
                        </Entry>
                    </Frame>

                </StackLayout>

                <!--  Type OwnerShip Picker  -->

                <StackLayout>
                    <Label
                        Margin="40,20,0,0"
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Type of Ownership *"
                        TextColor="Black" />
                    <Frame
                        Margin="30,10"
                        Padding="10"
                        BackgroundColor="#DCF4DA"
                        BorderColor="Transparent"
                        CornerRadius="15"
                        HasShadow="False"
                        HorizontalOptions="FillAndExpand">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Picker
                                x:Name="OwnershipList"
                                Title="Type of Ownership"
                                Grid.Column="0"
                                FontSize="20"
                                Style="{StaticResource NoUnderlinePicker}"
                                TitleColor="Black" />
                            <Label
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                FontFamily="MaterialIconsOutlined-Regular"
                                FontSize="40"
                                HorizontalOptions="End"
                                Text="arrow_drop_down"
                                TextColor="Black"
                                VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </StackLayout>

                <!--  Species Picker  -->

                <StackLayout>
                    <Label
                        Margin="40,20,0,0"
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Species *"
                        TextColor="Black" />
                    <Frame
                        Margin="30,10"
                        Padding="10"
                        BackgroundColor="#DCF4DA"
                        BorderColor="Transparent"
                        CornerRadius="15"
                        HasShadow="False"
                        HorizontalOptions="FillAndExpand">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Picker
                                x:Name="SpeciesList"
                                Title="Select Species"
                                Grid.Column="0"
                                FontSize="20"
                                SelectedIndexChanged="OnSpeciesSelected"
                                Style="{StaticResource NoUnderlinePicker}"
                                TitleColor="Black" />
                            <Label
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                FontFamily="MaterialIconsOutlined-Regular"
                                FontSize="40"
                                HorizontalOptions="End"
                                Text="arrow_drop_down"
                                TextColor="Black"
                                VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </StackLayout>

                <!--  Breed Picker  -->

                <StackLayout>
                    <Label
                        Margin="40,20,0,0"
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Breed *"
                        TextColor="Black" />
                    <Frame
                        Margin="30,10"
                        Padding="10"
                        BackgroundColor="#DCF4DA"
                        BorderColor="Transparent"
                        CornerRadius="15"
                        HasShadow="False"
                        HorizontalOptions="FillAndExpand">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Picker
                                x:Name="BreedList"
                                Title="Select Breed"
                                Grid.Column="0"
                                FontSize="20"
                                Style="{StaticResource NoUnderlinePicker}"
                                TitleColor="Black" />
                            <Label
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                FontFamily="MaterialIconsOutlined-Regular"
                                FontSize="40"
                                HorizontalOptions="End"
                                Text="arrow_drop_down"
                                TextColor="Black"
                                VerticalOptions="Center" />

                        </Grid>
                    </Frame>

                </StackLayout>

                <!--  Date Picker  -->

                <StackLayout>
                    <Label
                        Margin="40,20,0,0"
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Date of Birth *"
                        TextColor="Black" />
                    <Frame
                        Margin="30,10"
                        Padding="10"
                        BackgroundColor="#DCF4DA"
                        BorderColor="Transparent"
                        CornerRadius="15"
                        HasShadow="False"
                        HorizontalOptions="FillAndExpand">
                        <DatePicker
                            x:Name="BirtDate"
                            FontSize="20"
                            Format="D" />
                    </Frame>
                </StackLayout>

                <!--  Sex  -->

                <StackLayout>
                    <Label
                        Margin="40,20,0,0"
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Sex *"
                        TextColor="Black" />
                    <Frame
                        Margin="30,10"
                        Padding="10"
                        BackgroundColor="#DCF4DA"
                        BorderColor="Transparent"
                        CornerRadius="15"
                        HasShadow="False"
                        HorizontalOptions="FillAndExpand">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Picker
                                x:Name="SexList"
                                Title="Select Sex"
                                Grid.Column="0"
                                FontSize="20"
                                Style="{StaticResource NoUnderlinePicker}"
                                TitleColor="Black" />
                            <Label
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                FontFamily="MaterialIconsOutlined-Regular"
                                FontSize="40"
                                HorizontalOptions="End"
                                Text="arrow_drop_down"
                                TextColor="Black"
                                VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </StackLayout>

                <!--  Habitat  -->

                <StackLayout>
                    <Label
                        Margin="40,20,0,0"
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Habitat *"
                        TextColor="Black" />
                    <Frame
                        Margin="30,10"
                        Padding="10"
                        BackgroundColor="#DCF4DA"
                        BorderColor="Transparent"
                        CornerRadius="15"
                        HasShadow="False"
                        HorizontalOptions="FillAndExpand">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Picker
                                x:Name="HabitatList"
                                Title="Select Habitat"
                                Grid.Column="0"
                                FontSize="20"
                                Style="{StaticResource NoUnderlinePicker}"
                                TitleColor="Black" />
                            <Label
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                FontFamily="MaterialIconsOutlined-Regular"
                                FontSize="40"
                                HorizontalOptions="End"
                                Text="arrow_drop_down"
                                TextColor="Black"
                                VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </StackLayout>

                <!--  Contact with Other Animals?  -->

                <StackLayout>
                    <Label
                        Margin="40,20,0,0"
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Contact with other Animals? *"
                        TextColor="Black" />
                    <Frame
                        Margin="30,10"
                        Padding="10"
                        BackgroundColor="#DCF4DA"
                        BorderColor="Transparent"
                        CornerRadius="15"
                        HasShadow="False"
                        HorizontalOptions="FillAndExpand">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Picker
                                x:Name="ContactwOtherAnimals"
                                Title="Select"
                                Grid.Column="0"
                                FontSize="20"
                                Style="{StaticResource NoUnderlinePicker}"
                                TitleColor="Black" />
                            <Label
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                FontFamily="MaterialIconsOutlined-Regular"
                                FontSize="40"
                                HorizontalOptions="End"
                                Text="arrow_drop_down"
                                TextColor="Black"
                                VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </StackLayout>

                <!--  Weight Entry  -->

                <StackLayout>
                    <Label
                        Margin="40,20,0,0"
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Weight(KGS) *"
                        TextColor="Black" />
                    <Frame
                        Margin="30,10"
                        Padding="10"
                        BackgroundColor="#DCF4DA"
                        BorderColor="Transparent"
                        CornerRadius="15"
                        HasShadow="False"
                        HorizontalOptions="FillAndExpand">
                        <Entry
                            x:Name="PetWeight"
                            BackgroundColor="Transparent"
                            FontAttributes="None"
                            FontSize="20"
                            HorizontalOptions="FillAndExpand"
                            IsSpellCheckEnabled="False"
                            IsTextPredictionEnabled="False"
                            Keyboard="Numeric"
                            MaxLength="5"
                            Placeholder="Input Weight(KGS)"
                            PlaceholderColor="Black"
                            VerticalOptions="Center" />
                    </Frame>
                </StackLayout>

                <!--  Animal Color Entry  -->

                <StackLayout>
                    <Label
                        Margin="40,20,0,0"
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Animal Color *"
                        TextColor="Black" />
                    <Frame
                        Margin="30,10"
                        Padding="10"
                        BackgroundColor="#DCF4DA"
                        BorderColor="Transparent"
                        CornerRadius="15"
                        HasShadow="False"
                        HorizontalOptions="FillAndExpand">
                        <Entry
                            x:Name="PetColor"
                            BackgroundColor="Transparent"
                            FontAttributes="None"
                            FontSize="20"
                            HorizontalOptions="FillAndExpand"
                            IsSpellCheckEnabled="False"
                            IsTextPredictionEnabled="False"
                            Keyboard="Text"
                            Placeholder="Input Animal Color"
                            PlaceholderColor="Black"
                            VerticalOptions="Center" />
                    </Frame>
                </StackLayout>

                <!--  Remarks  -->
                <StackLayout Padding="20">

                    <Frame
                        Padding="10"
                        BackgroundColor="#DCF4DA"
                        BorderColor="Black"
                        CornerRadius="5"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <StackLayout>
                            <Label
                                Margin="10,10"
                                FontAttributes="Bold"
                                FontSize="20"
                                HorizontalOptions="Start"
                                Text="Remarks "
                                TextColor="Black"
                                VerticalOptions="Start" />
                            <Editor
                                x:Name="RemarksEditor"
                                Margin="10,10"
                                AutoSize="TextChanges"
                                FontSize="20"
                                HeightRequest="100"
                                HorizontalOptions="FillAndExpand"
                                Placeholder="Input Remarks"
                                PlaceholderColor="#c2c2c2"
                                TextColor="Black"
                                VerticalOptions="Start" />
                        </StackLayout>


                    </Frame>

                </StackLayout>

                <!--  Pet Origin  -->

                <StackLayout Padding="20">
                    <Label
                        FontAttributes="Bold"
                        FontSize="Medium"
                        HorizontalOptions="Center"
                        Text="PET ORIGIN *"
                        TextColor="Black"
                        VerticalOptions="Start" />

                    <Frame
                        Padding="10"
                        BackgroundColor="#DCF4DA"
                        BorderColor="Black"
                        CornerRadius="5"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <RadioButton
                                    x:Name="LocalRadioButton"
                                    CheckedChanged="OnRadioButtonCheckedChanged"
                                    Content="Local (within the Barangay)"
                                    FontSize="20"
                                    GroupName="PetOriginGroup"
                                    TextColor="Black" />
                            </StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <RadioButton
                                    x:Name="OtherRadioButton"
                                    CheckedChanged="OnRadioButtonCheckedChanged"
                                    Content="Other (Outside the Barangay)"
                                    FontSize="20"
                                    GroupName="PetOriginGroup"
                                    TextColor="Black" />
                            </StackLayout>

                            <StackLayout x:Name="OtherOriginEntryStack" IsVisible="False">
                                <Label
                                    Margin="10,10"
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    HorizontalOptions="Start"
                                    Text="Indicate the Origin"
                                    TextColor="Black"
                                    VerticalOptions="Start" />
                                <Editor
                                    x:Name="OtherOriginEntry"
                                    Margin="10,10"
                                    AutoSize="TextChanges"
                                    FontSize="20"
                                    HeightRequest="100"
                                    HorizontalOptions="FillAndExpand"
                                    Placeholder="Enter origin here"
                                    PlaceholderColor="#c2c2c2"
                                    TextColor="Black"
                                    VerticalOptions="Start" />
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <!--  Pet Tag Type  -->
                
                <StackLayout Padding="20">
                    <Label
                        FontAttributes="Bold"
                        FontSize="Medium"
                        HorizontalOptions="Center"
                        Text="Tag Type *"
                        TextColor="Black"
                        VerticalOptions="Start" />

                    <Frame
                        Padding="10"
                        BackgroundColor="#DCF4DA"
                        BorderColor="Black"
                        CornerRadius="5"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <StackLayout>
                            <StackLayout Orientation="Vertical">
                                <RadioButton
                                    x:Name="NoneRDbtn"
                                    CheckedChanged="OnRadioTagButtonCheckedChanged"
                                    Content="None"
                                    FontSize="20"
                                    GroupName="TagTypeGroup"
                                    TextColor="Black" />
                                <RadioButton
                                    x:Name="CollarTagRdBtn"
                                    CheckedChanged="OnRadioTagButtonCheckedChanged"
                                    Content="Collar Tag"
                                    FontSize="20"
                                    GroupName="TagTypeGroup"
                                    TextColor="Black" />
                                <RadioButton
                                    x:Name="EarTagRdBtn"
                                    CheckedChanged="OnRadioTagButtonCheckedChanged"
                                    Content="Ear Tag"
                                    FontSize="20"
                                    GroupName="TagTypeGroup"
                                    TextColor="Black" />
                                <RadioButton
                                    x:Name="LegBandRdBtn"
                                    CheckedChanged="OnRadioTagButtonCheckedChanged"
                                    Content="Leg Band"
                                    FontSize="20"
                                    GroupName="TagTypeGroup"
                                    TextColor="Black" />
                                <RadioButton
                                    x:Name="MicrochipCodeRdBtn"
                                    CheckedChanged="OnRadioTagButtonCheckedChanged"
                                    Content="Microchip Code"
                                    FontSize="20"
                                    GroupName="TagTypeGroup"
                                    TextColor="Black" />
                                <RadioButton
                                    x:Name="RFIDRdBtn"
                                    CheckedChanged="OnRadioTagButtonCheckedChanged"
                                    Content="Radio Frequency Identification"
                                    FontSize="20"
                                    GroupName="TagTypeGroup"
                                    TextColor="Black" />
                                <RadioButton
                                    x:Name="TattooCodeRdBtn"
                                    CheckedChanged="OnRadioTagButtonCheckedChanged"
                                    Content="Tattoo Code"
                                    FontSize="20"
                                    GroupName="TagTypeGroup"
                                    TextColor="Black" />
                            </StackLayout>

                            <StackLayout x:Name="TagNumberEntryStack" IsVisible="False">
                                <Label
                                    Margin="10,10"
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    HorizontalOptions="Start"
                                    Text="Tag Number"
                                    TextColor="Black"
                                    VerticalOptions="Start" />
                                <Entry
                                    x:Name="OtherTagEntry"
                                    Margin="10,10"
                                    FontSize="20"
                                    HeightRequest="100"
                                    HorizontalOptions="FillAndExpand"
                                    Placeholder="Enter Tag Number"
                                    PlaceholderColor="#c2c2c2"
                                    TextColor="Black"
                                    VerticalOptions="Start" />
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <!--  Pet Status  -->

                <StackLayout Padding="20">
                    <!--  Existing Content  -->

                    <!--  STATUS Section  -->
                    <Label
                        Margin="10,20,10,0"
                        FontAttributes="Bold"
                        FontSize="Medium"
                        HorizontalOptions="Center"
                        Text="STATUS *"
                        TextColor="Black"
                        VerticalOptions="Start" />
                    <Frame
                        Padding="10"
                        BackgroundColor="#DCF4DA"
                        BorderColor="Black"
                        CornerRadius="5"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start">
                        <StackLayout>
                            <RadioButton
                                x:Name="AliveRadioButton"
                                CheckedChanged="OnStatusRadioButtonCheckedChanged"
                                Content="Alive"
                                FontSize="20"
                                GroupName="StatusGroup" />
                            <RadioButton
                                x:Name="DeadRadioButton"
                                CheckedChanged="OnStatusRadioButtonCheckedChanged"
                                Content="Dead"
                                FontSize="20"
                                GroupName="StatusGroup" />

                            <StackLayout
                                x:Name="DatePickerStack"
                                Margin="10,0,10,0"
                                IsVisible="False">
                                <Label
                                    Margin="10,20"
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    HorizontalOptions="Start"
                                    Text="Date of Death"
                                    TextColor="Black"
                                    VerticalOptions="Start" />
                                <DatePicker
                                    x:Name="DeathDatePicker"
                                    Margin="5,0"
                                    FontSize="20"
                                    HeightRequest="50"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="Start" />
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </StackLayout>
                
                <!--  ImagePicker  -->
                <StackLayout Padding="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        Text="Animal Images"
                        TextColor="Green" />
                    <Label
                        FontSize="Medium"
                        HorizontalOptions="Center"
                        Text="Petâ€™s Image" />
                    <Grid
                        Padding="10"
                        ColumnSpacing="10"
                        RowSpacing="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Frame
                            Grid.Row="0"
                            Grid.Column="0"
                            Padding="10"
                            BorderColor="Gray"
                            HasShadow="False">
                            <StackLayout>
                                <Image
                                    x:Name="Image1"
                                    Aspect="AspectFit"
                                    HeightRequest="100"
                                    Source="default_image_placeholder.png"
                                    WidthRequest="100" />
                                <Label
                                    Padding="5,30,0,0"
                                    FontSize="Medium"
                                    Text="Image 1:*" />

                                <Button
                                    Margin="0,10,0,0"
                                    BackgroundColor="#096B00"
                                    Clicked="OnSelectImage1Clicked"
                                    CornerRadius="10"
                                    Text="Select Image 1"
                                    TextColor="White" />
                            </StackLayout>
                        </Frame>
                        <Frame
                            Grid.Row="0"
                            Grid.Column="1"
                            Padding="10"
                            BorderColor="Gray"
                            HasShadow="False">
                            <StackLayout>
                                <Image
                                    x:Name="Image2"
                                    Aspect="AspectFit"
                                    HeightRequest="100"
                                    Source="default_image_placeholder.png"
                                    WidthRequest="100" />
                                <Label
                                    Padding="5,30,0,0"
                                    FontSize="Medium"
                                    Text="Image 2:" />
                                <Button
                                    Margin="0,10,0,0"
                                    BackgroundColor="#096B00"
                                    Clicked="OnSelectImage2Clicked"
                                    CornerRadius="10"
                                    Text="Select Image 2"
                                    TextColor="White" />
                            </StackLayout>
                        </Frame>
                        <Frame
                            Grid.Row="1"
                            Grid.Column="0"
                            Padding="10"
                            BorderColor="Gray"
                            HasShadow="False">
                            <StackLayout>
                                <Image
                                    x:Name="Image3"
                                    Aspect="AspectFit"
                                    HeightRequest="100"
                                    Source="default_image_placeholder.png"
                                    WidthRequest="100" />
                                <Label
                                    Padding="5,30,0,0"
                                    FontSize="Medium"
                                    Text="Image 3:" />
                                <Button
                                    Margin="0,10,0,0"
                                    BackgroundColor="#096B00"
                                    Clicked="OnSelectImage3Clicked"
                                    CornerRadius="10"
                                    Text="Select Image 3"
                                    TextColor="White" />
                            </StackLayout>
                        </Frame>
                        <Frame
                            Grid.Row="1"
                            Grid.Column="1"
                            Padding="10"
                            BorderColor="Gray"
                            HasShadow="False">
                            <StackLayout>
                                <Image
                                    x:Name="Image4"
                                    Aspect="AspectFit"
                                    HeightRequest="100"
                                    Source="default_image_placeholder.png"
                                    WidthRequest="100" />
                                <Label
                                    Padding="5,30,0,0"
                                    FontSize="Medium"
                                    Text="Image 4:" />
                                <Button
                                    Margin="0,10,0,0"
                                    BackgroundColor="#096B00"
                                    Clicked="OnSelectImage4Clicked"
                                    CornerRadius="10"
                                    Text="Select Image 4"
                                    TextColor="White" />
                            </StackLayout>
                        </Frame>
                    </Grid>
                </StackLayout>

                <!--  Button for Submit  -->

                <Button
                    x:Name="BtnSubmit"
                    Margin="60"
                    Padding="20"
                    BackgroundColor="#096B00"
                    Clicked="BtnSubmit_Clicked"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    FontSize="20"
                    Text="SUBMIT"
                    TextColor="White" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>


    <ContentPage.Resources>
        <Style x:Key="NoUnderlinePicker" TargetType="Picker">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="FontSize" Value="20" />
        </Style>
    </ContentPage.Resources>
</ContentPage>